<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-10dp"
            app:srcCompat="@mipmap/logorojo2" />


        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="5656865"
            android:textColor="#202156"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-220dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="REITRO DE AGENTE "
            android:textColor="#202156"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="110dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="RegiÃ³n: "
            android:textColor="#202156"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sizetns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="Cant:  "
            android:textColor="#202156"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sizetotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="170dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="Total :  "
            android:textColor="#202156"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="H REQUELME CORDOVA"
            android:textColor="#202156"
            android:textSize="14sp" />
        <Button
            android:id="@+id/ingresoOd"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/action2"
            android:layout_gravity="center"
            android:ems="10"
            android:maxLength="12"
            android:text="ESCANEAR"
            android:onClick="Escanear"
            android:fontFamily="@font/titillium_web"
            android:inputType="number"
            android:textColor="#202156"
            android:textSize="20sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginTop="280dp">

            <LinearLayout
                android:id="@+id/layoutods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/normal"
                    android:layout_width="190dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/action"
                    android:elevation="30dp"
                    android:fontFamily="@font/titillium_web"
                    android:onClick="cerrarManifiesto"
                    android:text="ACEPTAR"
                    android:textSize="18sp" />
            </LinearLayout>

        </ScrollView>


        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="630dp"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="@string/version"
            android:textColor="#0E004D"
            android:layout_marginEnd="3dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/charge"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="50dp"
            android:src="@drawable/trans"
            android:visibility="invisible"
            app:srcCompat="@drawable/trans" />

    </FrameLayout>
</android.support.constraint.ConstraintLayout>